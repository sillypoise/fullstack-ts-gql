{
    "$schema": "http://json.schemastore.org/tsconfig",
    "extends": "tsconfig/api.json",
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ]
}
